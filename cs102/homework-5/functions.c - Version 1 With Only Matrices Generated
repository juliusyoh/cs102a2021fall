/* This function specifically fills the 8 x 12 matrix */

void fill8x12 (int matrix1[8][12] )
        {
        int i = 0;
        int j = 0;

        for( i = 0; i<8; i=i+1 )
                {
                for ( j = 0; j<12; j=j+1 )
                        {
                        matrix1[i][j] = labs(mrand48()%100);
                        }
                }
        }

/* This function specifically fills the 12 x 8 matrix */

void fill12x8 (int matrix2[12][8] )
        {
        int i = 0;
        int j = 0;

        for( i = 0; i<12; i=i+1 )
                {
                for ( j = 0; j<8; j=j+1 )
                        {
                        matrix2[i][j] = labs(mrand48()%100);
                        }
                }
        }

/* This function specifically prints the 8 x 12 matrix */

void print8x12 (int matrix1[8][12])
        {
int  i = 0;
int j = 0;


        for( i = 0; i < 8; i = i +1)
        {
                for (j = 0; j < 12; j = j +1)
                {
                        fprintf(stdout, "%5d", matrix1[i][j]);
                }
                                fprintf(stdout, "\n" );
        }

        }

/* This function specifically prints the 12 x 8 matrix */

void print12x8 (int matrix2[12][8])
        {
int i = 0;
int j = 0;


        for( i = 0; i < 12; i = i +1)
        {
                for (j = 0; j < 8; j = j +1)
                        {
                        fprintf(stdout, "%5d", matrix2[i][j]);
                        }
                                fprintf(stdout, "\n" );
                }

        }




